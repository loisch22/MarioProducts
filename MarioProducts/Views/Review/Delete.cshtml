@model MarioProducts.Models.Review

@{
    ViewData["Title"] = "Product - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Are you sure you want to remove this review?</h1>

@using (Html.BeginForm())
{
    <input type="submit" class="btn btn-danger" value="Confirm" onclick="location.href='@Url.Action("Delete", new{ id = Model.ReviewId})'"/>
}