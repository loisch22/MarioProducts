@model MarioProducts.Models.Product

@{
    ViewData["Title"] = "Product - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="add-product-index">
    <h1 class="create-title">Add new product</h1>

    <div class="container form">
        @using (Html.BeginForm())
        {
            <div class="card">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                <div class="margin"></div>
                @Html.LabelFor(model => model.Cost)
                @Html.EditorFor(model => model.Cost)
                <div class="margin"></div>
                @Html.LabelFor(model => model.CountryOfOrigin)
                @Html.EditorFor(model => model.CountryOfOrigin)
                <div class="margin"></div>
                @Html.HiddenFor(model => model.CreateDate)

                <input type="submit" value="Save" class="btn submit-btn"/>
            </div>
		}
    </div>
</div>
