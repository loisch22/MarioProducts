@model MarioProducts.Models.Product

@{
    ViewData["Title"] = "Product - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="delete-view">
    <h1 class="home-title">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h1>

    @using (Html.BeginForm())
    {
        <div class="center">
             <input type="submit" class="btn delete-confirm" value="Confirm" onclick="location.href='@Url.Action("Delete", new{ id = Model.ProductId})'"/>
             <input type="submit" class="btn" value="Cancel" onclick="location.href='Url.Action("Details", new {id = Model.ProductId})'"/>
	    </div>
    }
</div>