@model IEnumerable<MarioProducts.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

@foreach (var product in Model)
{
    <li>@Html.DisplayFor(model => product.Name) | @Html.ActionLink("Details", "Details", new {id = product.ProductId})
    </li>
}

@if (User.Identity.IsAuthenticated)
{
@Html.ActionLink("Create", "Create")
}
