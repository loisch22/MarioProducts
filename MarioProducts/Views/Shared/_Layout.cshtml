<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gummi Bear Kingdom</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans|Open+Sans|Poppins|Roboto+Condensed" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded nav-layout">
        <a class="navbar-brand">@Html.ActionLink("Mario's Specialty Foods", "Index", "Home")</a>
        <div class="navbar-nav">
          <a class="nav-item nav-link">@Html.ActionLink("Products", "Index", "Product")</a>

		   @if (User.Identity.IsAuthenticated)
    		{
			   <a class="nav-item nav-link">@Html.ActionLink("Account", "Index", "Account")</a>
    		   <a class="nav-item nav-link">@Html.ActionLink("Add New Product", "Create", "Product")</a>
				@using (Html.BeginForm("Logoff", "Account"))
				{
                    <input type="submit" class="btn" value="Log out"/> 
				}
    		}
		   else
			{
			   <a class="nav-item nav-link">@Html.ActionLink("Create Admin", "Register", "Account")</a>
			   <a class="nav-item nav-link">@Html.ActionLink("Admin Log In", "Login", "Account")</a>           
			}

		</div>
    </nav>
 
    @RenderBody()
</body>
</html>